{
  "name": "eventail",
  "version": "0.2.10",
  "description": "Event emitter abstract class with priority support",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "build:prod": "npm run clean && NODE_ENV=production rollup -c",
    "test": "uvu -r tsx test",
    "coverage": "c8 --include=src --reporter=text npm test",
    "prepublishOnly": "npm run build:prod && npm test"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "development": "./dist/index.js",
        "production": "./dist/index.min.js",
        "default": "./dist/index.min.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "events",
    "emitter",
    "priority",
    "abstract",
    "typescript",
    "context",
    "listeners"
  ],
  "author": "jango",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jango-git/eventail.git"
  },
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "c8": "^10.1.3",
    "eslint": "^9.26.0",
    "rollup": "^4.40.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-transformer-minify-privates": "^1.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uvu": "^0.5.6"
  }
}
